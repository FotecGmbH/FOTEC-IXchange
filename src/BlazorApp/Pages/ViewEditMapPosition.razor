@page "/vieweditmapposition"
@page "/vieweditmapposition/{Id:int}"

@using Biss.Apps.Map.Blazor.OpenStreetMap.Controls
@inherits ProjectRazorPage<VmEditMapPosition>

@if (ViewModel != null)
{
    <div style="position: relative;">
        <div style="position: absolute; margin-left: auto; margin-right: auto; margin-top: 20px; left: 100px; right: 50px; text-align: center; z-index: 99999">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                <BxButton BissCommand="ViewModel.CmdOk" BxButtonType="EnumBxButtonType.JustText" ButtonStyle="ButtonStyle.Success"/>
                <BxButton BissCommand="ViewModel.CmdAbort" BxButtonType="EnumBxButtonType.JustText" ButtonStyle="ButtonStyle.Danger"/>
            </RadzenStack>
        </div>
        <BissMapOpenStreetMap/>
    </div>
}